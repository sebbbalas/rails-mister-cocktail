<h1><%=  @cocktail.name%></h1>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%=  dose.ingredient.name%> <%=  dose.description%> <%= link_to "(delete)", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>


<%= link_to 'Add an Ingredient', new_cocktail_dose_path(@cocktail) %> <br>

<%= link_to 'Back to Cocktails', root_path %>
